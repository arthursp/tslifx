{
  "name": "tslifx",
  "version": "1.0.0",
  "description": "Library to control lifx lights over node & typescript",
  "main": "dist/LIFX.js",
  "types": "dist/LIFX.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arthursp/tslifx.git"
  },
  "keywords": [
    "lifx"
  ],
  "author": "arthursp",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/arthursp/tslifx/issues"
  },
  "homepage": "https://github.com/arthursp/tslifx#readme",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "jest": "^24.7.1",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.2",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.2"
  },
  "dependencies": {
    "@types/request-promise": "^4.1.42",
    "request-promise": "^4.2.4"
  }
}